        <item name="radius">5dp</item>
    </style>

    <style name="buttonText">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="layoutstle">
        <item name="android:background">@drawable/shape_lay</item>
    </style>

    <style name="layoutborder">
        <item name="android:background">@drawable/shape_border</item>
    </style>

</resources>
